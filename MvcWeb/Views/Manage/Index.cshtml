@model MvcWeb.Models.IndexViewModel
@{
    ViewBag.Title = "Administrar Mi perfil";
}
<div class="row" style="background-color:white;" >
    <div class="col-md-1">
        <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_640.png" style="width: 80px; height: 80px; position: relative; top: 15px; " />
    </div>
    <div class="col-md-5">
        <h2>@ViewBag.Title</h2>
        <h4>Cambiar la configuración de la cuenta</h4>
    </div>
</div>

<p class="text-success">@ViewBag.StatusMessage</p>
<div style="background-color:white;width:50%;" >
    <hr />
    <dl class="dl-horizontal">
        <dt>Contraseña:</dt>
        <dd>
            
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Cambiar la Contraseña", "ChangePassword", null, new { @class = "btn btn-primary" })
                //@Html.ActionLink("Cambiar la contraseña", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Crear", "SetPassword")
            }
            
        </dd> <br />
    </dl>
</div>
