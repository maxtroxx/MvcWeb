@model IEnumerable<MvcWeb.Models.Producto>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center" style="background-color:white">Lista de productos</h2>

<table class="table" style="background-color:white">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.stock)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imagen)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td class="text-center">
        @Html.DisplayFor(modelItem => item.nombre)
    </td>
    <td class="text-center">
        @Html.DisplayFor(modelItem => item.stock)
    </td>
    <td class="text-center">
        @Html.DisplayFor(modelItem => item.precio)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.descripcion)
    </td>
    <td >
        @Html.DisplayFor(modelItem => item.imagen)
    </td>
    <td style="width:250px;">
        <button class="btn btn-success">@Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @style = "text-decoration:none ;color:white;" })</button>
        <button class="btn btn-primary"> @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new {@style = "text-decoration:none ;color:white;" }) </button>
        <button class="btn btn-danger"> @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @style = "text-decoration:none ;color:white;" }) </button>
    </td>
</tr>
}

</table>
<a class="btn btn-warning" style="width:200px;" style="background-color:white" @Html.ActionLink("Crear","Create", new { @style = "text-decoration:none ;color:white;" }) </a>

